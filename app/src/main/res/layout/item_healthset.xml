<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/set_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/lightblue"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="set" />

    <EditText
        android:id="@+id/weight_EditText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:hint="0"
        android:textAlignment="center"
        android:textColor="@color/lightblue"
        android:textColorHint="@color/lightblue"
        app:layout_constraintLeft_toRightOf="@id/set_TextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weight_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="@string/kg"
        android:textSize="20sp"
        android:textColor="@color/lightblue"
        app:layout_constraintLeft_toRightOf="@id/weight_EditText"
        app:layout_constraintBottom_toBottomOf="@id/set_TextView" />

    <EditText
        android:id="@+id/count_EditText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:hint="0"
        android:textAlignment="center"
        android:textColor="@color/lightblue"
        android:textColorHint="@color/lightblue"
        app:layout_constraintLeft_toRightOf="@id/weight_TextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/count_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="íšŒ"
        android:textSize="20sp"
        android:textColor="@color/lightblue"
        app:layout_constraintLeft_toRightOf="@id/count_EditText"
        app:layout_constraintBottom_toBottomOf="@id/set_TextView" />

    <ImageButton
        android:id="@+id/delete_ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/ic_baseline_delete_forever_24"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>